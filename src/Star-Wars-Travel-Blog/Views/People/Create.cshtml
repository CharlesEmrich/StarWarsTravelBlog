@model StarWarsTravelBlog.Models.Location

<html>
<head>
    <title>Star Wars Travel Blog Location - Create</title>
</head>
<body>
    <h2>Create</h2>
    <hr />
    <h4>Add a new location</h4>
    @using (Html.BeginForm())
    {
        <h3>Planet</h3>
        @Html.TextBoxFor(model => model.planet)

        <h3>Biome</h3>
        @Html.TextBoxFor(model => model.biome)

        <h3>Region</h3>
        @Html.TextBoxFor(model => model.region)
        <input type="submit" value="Add new Location" />
    }
    <p>@Html.ActionLink("Back to list", "Index")</p>
</body>
</html>